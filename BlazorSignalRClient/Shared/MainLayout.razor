                Timeout="10"
                IconType="IconType.FontAwesome"
                ErrorIcon="error_outline"
                InfoIcon="fa fa-info-circle"
                SuccessIcon="done_outline"
                WarningIcon="warning" />

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
